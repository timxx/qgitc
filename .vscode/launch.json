{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: QGitc (Integrated Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Blame (Integrated Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": [
                "blame",
                "${workspaceRoot}/qgitc/main.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Commit (Integrated Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "console": "integratedTerminal",
            "args": [
                "commit"
            ]
        },
        {
            "name": "Python: MergeTool (Integrated Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": [
                "mergetool"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Register Shell (Integrated Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": [
                "shell",
                "register"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Unregister Shell (Integrated Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/qgitc.py",
            "args": [
                "shell",
                "unregister"
            ],
            "console": "integratedTerminal"
        },
    ]
}